{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Error",
        "Microsoft.EntityFrameworkCore": "Error",
        "Microsoft.AspNetCore": "Warning",
        "System": "Error",
        "ModularMonolith": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Warning"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/var/log/modular-monolith/app-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 104857600,
          "rollOnFileSizeLimit": true,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/var/log/modular-monolith/errors-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 90,
          "fileSizeLimitBytes": 52428800,
          "rollOnFileSizeLimit": true,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Error"
        }
      }
    ],
    "Properties": {
      "Environment": "Production"
    }
  },
  "Cache": {
    "Provider": "Redis",
    "DefaultExpiration": "01:00:00",
    "Redis": {
      "ConnectionString": "${REDIS_CONNECTION_STRING}",
      "KeyPrefix": "mm:prod:",
      "Database": 0
    }
  },
  "Jwt": {
    "Key": "${JWT_SECRET_KEY}",
    "Issuer": "ModularMonolith",
    "Audience": "ModularMonolith",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "ConnectionStrings": {
    "DefaultConnection": "${DATABASE_CONNECTION_STRING}"
  },
  "Cors": {
    "AllowedOrigins": [
      "${FRONTEND_URL}",
      "${ADMIN_PANEL_URL}"
    ],
    "AllowCredentials": true,
    "MaxAge": 86400
  },
  "Security": {
    "RequireHttps": true,
    "EnableSecurityHeaders": true,
    "ContentSecurityPolicy": "default-src 'self'; script-src 'self'; style-src 'self'; img-src 'self' data: https:; font-src 'self'; connect-src 'self'; frame-ancestors 'none'"
  },
  "Performance": {
    "QueryTimeout": 30,
    "SlowQueryThreshold": "00:00:00.500",
    "EnableQueryLogging": false,
    "MaxConcurrentRequests": 2000,
    "EnableResponseCompression": true,
    "EnableResponseCaching": true
  },
  "HealthChecks": {
    "Enabled": true,
    "DetailedErrors": false,
    "CacheDurationSeconds": 60
  },
  "Swagger": {
    "Enabled": false
  },
  "Https": {
    "RedirectStatusCode": 308,
    "Port": 443
  },
  "Hsts": {
    "MaxAgeDays": 365,
    "IncludeSubdomains": true,
    "Preload": true
  },
  "Kestrel": {
    "Limits": {
      "MaxRequestBodySize": 5242880,
      "MaxRequestHeaderCount": 50,
      "MaxRequestHeadersTotalSize": 16384,
      "MaxRequestLineSize": 4096,
      "RequestHeadersTimeoutSeconds": 15,
      "KeepAliveTimeoutSeconds": 60
    }
  },
  "RateLimit": {
    "GlobalPermitLimit": 200,
    "GlobalWindowMinutes": 1,
    "AuthPermitLimit": 3,
    "AuthWindowMinutes": 15,
    "ApiPermitLimit": 120,
    "ApiWindowMinutes": 1
  },
  "FeatureManagement": {
    "UserRegistration": false,
    "UserLogin": true,
    "TokenRefresh": true,
    "UserManagement": true,
    "RoleManagement": true,
    "Modules": {
      "Users": true,
      "Roles": true,
      "Authentication": true
    }
  }
}